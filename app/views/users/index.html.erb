<div class="jumbotron">
<h1>Listing users</h1>
</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%=user.email%></td>
        <td><%=user.first_name%></td>
        <td>|</td>
        
        <td><%=link_to 'View Property',user_properties_path(user), class: "btn-default btn"%></td>
        <td><%=link_to 'Add New Property',new_user_property_path(user) , class: "btn-default btn"%></td>
        <td><%= link_to 'Show', user , class: "btn-default btn"%></td>
        <td><%= link_to 'Edit', edit_user_path(user) , class: "btn-default btn" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn-default btn"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path , class: "btn-default btn"%>
